<h1 class="text-danger">I have a question!</h1>

<table class="table table-hover">
  <tr>
    <th>Title</th>
    <th>Asked By</th>
    <th>Delete?</th>
  </tr>

  <% @questions.each do |q| %>
  <tr>
    <td><%= link_to q.title, q %></td>
    <td><%= q.user.name %></td>
    <td><%= link_to 'x', q, method: :delete %></td>
  </tr>
  <% end %>
</table>
